#include "shaderCommon.hlsl"

#include "nbl/builtin/hlsl/subgroup/arithmetic_portability.hlsl"
#include "nbl/builtin/hlsl/shared_memory_accessor.hlsl"

using exclusive_scan = nbl::hlsl::subgroup::exclusive_scan;
using binops = nbl::hlsl::binops;

[numthreads(_NBL_HLSL_WORKGROUP_SIZE_, 1, 1)]
void CSMain(uint gl_GlobalInvocationID: SV_DispatchThreadID)
{
	const uint sourceVal = inputValue[gl_GlobalInvocationID.x];
	outand.output[gl_GlobalInvocationID.x] = exclusive_scan< uint, binops::bitwise_and<uint>, SharedMemoryAdaptor<MemProxy> >(sourceVal);
	outxor.output[gl_GlobalInvocationID.x] = exclusive_scan< uint, binops::bitwise_xor<uint>, SharedMemoryAdaptor<MemProxy> >(sourceVal);
	outor.output[gl_GlobalInvocationID.x] = exclusive_scan< uint, binops::bitwise_or<uint>, SharedMemoryAdaptor<MemProxy> >(sourceVal);
	outadd.output[gl_GlobalInvocationID.x] = exclusive_scan< uint, binops::add<uint>, SharedMemoryAdaptor<MemProxy> >(sourceVal);
	outmul.output[gl_GlobalInvocationID.x] = exclusive_scan< uint, binops::mul<uint>, SharedMemoryAdaptor<MemProxy> >(sourceVal);
	outmin.output[gl_GlobalInvocationID.x] = exclusive_scan< uint, binops::min<uint>, SharedMemoryAdaptor<MemProxy> >(sourceVal);
	outmax.output[gl_GlobalInvocationID.x] = exclusive_scan< uint, binops::max<uint>, SharedMemoryAdaptor<MemProxy> >(sourceVal);
}